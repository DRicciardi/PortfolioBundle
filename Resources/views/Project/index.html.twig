{% extends 'StfalconPortfolioBundle::layout.html.twig' %}

{% block content %}
    <h4>Projects list</h4>

    {% if projects %}
        <ul id="projects-sortable">
            {% for project in projects %}
                <li data-id="{{ project.id }}">
                    {{ project.name }}
                    (<a href="{{ path('portfolioProjectEdit', { 'slug': project.slug }) }}">Edit project</a>
                    / <a href="{{ path('portfolioProjectDelete', { 'slug': project.slug }) }}">Delete project</a>)
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="info">
            List of projects is empty
        </div>
    {% endif %}
{% endblock %}